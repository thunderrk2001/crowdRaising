<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>fund :
        <%=address %>
    </title>
</head>

<body>
    <div class="container" id="container" data-address=<%=address%> >

        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <ul class="nav nav-pills">

                <li class="nav-item"><span>Fund Address:</span> <span class="nav-link " style="color: #385277;" aria-current="page"><%= address %> </span></li>
            </ul>

            <ul class="nav nav-pills">

                <li class="nav-item"><span>My account:</span> <span class="nav-link " id="myAccount" style="color: #385277;" aria-current="page">Not connected</span></li>
            </ul>
            <ul class="nav nav-pills">

                <li class="nav-item"><span>My Contribution(ETH)</span> <span class="nav-link " style="color: #385277;" id="myContribution" aria-current="page"></span></li>
            </ul>


        </header>
    </div>
    <div style="display: flex;margin: 20px; justify-content: end;">
        <div style="display: flex; flex-flow: row; margin-right: 20px;">
            <input type="number" id="inputAmount" step="0.000000000000000001" name="ether" id="amount">
            <button id="donate" style="color:white;background-color: #385277;">Donate(ETH)</button>
        </div>
    </div>
    <div class="container">
        <ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab" aria-controls="ex1-tabs-1" aria-selected="true">
                  Fund Details</a
    >
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="ex1-tab-2"
      data-mdb-toggle="tab"
      href="#ex1-tabs-2"
      role="tab"
      aria-controls="ex1-tabs-2"
      aria-selected="false"
      >All Requests</a
    >
  </li>
</ul>

<div class="tab-content" id="ex1-content">
  <div
    class="tab-pane fade show active"
    id="ex1-tabs-1"
    role="tabpanel"
    aria-labelledby="ex1-tab-1"
  >
    <div class="list-group">
        <div class="list-group-item list-group-item-action bg-light" aria-current="true">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">TITLE</h5>

            </div>
            <p class="mb-1" id="title">

            </p>

        </div>
        <div class="list-group-item list-group-item-action bg-light">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">DESCRIPTION</h5>

            </div>
            <p class="mb-1" id="description">

            </p>

        </div>
        <div class="list-group-item list-group-item-action bg-light">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">MANAGER ADDRESS</h5>

            </div>
            <p class="mb-1" id="manager_address">

            </p>

        </div>
        <div class="list-group-item list-group-item-action bg-light">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">RAISED AMOUNT (ETH)</h5>

            </div>
            <p class="mb-1" id="raised_amount">

            </p>

        </div>
        <div class="list-group-item list-group-item-action bg-light ">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1" >MINIMUM AMOUNT REQUIRED TO CONTRIBUTE(ETH)</h5>

            </div>
            <p class="mb-1" id="minimum_contribution">

            </p>

        </div>
    </div>
  </div>
  <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
    Tab 2 content
  </div>

</div>
</div>



    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
    <script src="/abi.js"></script>
    <script src="/fund.js"></script>
</body>

</html>